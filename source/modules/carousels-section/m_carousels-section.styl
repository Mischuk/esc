.m_carousels-section
  position relative
  .slick-arrow
    width 22px
    height 51px
    text-indent -9999px
    background-color transparent
    border none
    background-repeat no-repeat
    background-image url("../images/sprite.png")
    z-index 1
    &.slick-next
      background-position -150px 0
      &:hover
        background-position -300px 0
    &.slick-prev
      background-position -200px 0
      &:hover
        background-position -250px 0
    &.slick-disabled
      opacity .2
      cursor default
  .partners-carousel
    padding-left 30px
    padding-right 30px
    border-bottom 1px solid #e8e8e8
    padding-bottom 40px
    @media LG
      padding-left 50px
      padding-right 50px
      padding-bottom 60px
    .slick-arrow
      position absolute
      top 50%
      margin-top -45.5px
      @media LG
        margin-top -55.5px
      &.slick-prev
        left 0
      &.slick-next
        right 0
    .slide
      height 110px
      padding-left 10px
      padding-right 10px
      .image
        width 100%
        height 110px
        line-height 110px
        text-align center
        border 1px solid #e8e8e8
        img
          display inline-block
          vertical-align middle
          max-width 80%
          max-height 80%
  .comments-carousel
    padding 0 30px
    @media LG
      padding 0 50px
    .slick-arrow
      position absolute
      top 50%
      margin-top -25.5px
      &.slick-prev
        left 0
      &.slick-next
        right 0
    .slide
      padding 50px 10px 50px 10px
    .details
      position relative
      box-shadow 0 0 8px rgba(0,0,0,.15)
      padding-top 65px
      padding-left 15px
      padding-right 15px
      padding-bottom 15px
      @media screen and (min-width: 640px)
        min-height 300px
        max-height 300px
      @media LG
        min-height 390px
        max-height 390px
        padding-top 75px
        padding-left 45px
        padding-right 45px
        padding-bottom 45px
      &:before,
      &:after
        content ''
        position absolute
        top 15px
        width 32px
        height 30px
        background-image url("../images/sprite.png")
        background-repeat no-repeat
      &:before
        background-position -100px -100px
        left 10px
        @media LG
          left 30px
      &:after
        background-position -150px -100px
        right 10px
        @media LG
          right 30px
      .image
        width 100px
        height 100px
        position absolute
        left 50%
        top -50px
        margin-left -50px
        border-radius 50%
        background-size cover
        background-position 50%
        background-repeat no-repeat
        box-shadow 0 0 2px 1px rgba(0,0,0,.15)
      .message
        color #333
        font-size 16px
        line-height 1.2
        text-align center
        @media screen and (min-width: 640px)
          max-height 175px
          overflow hidden
        @media LG
          max-height 250px
          font-size 20px
      .username
        color $blue
        font-size 20px
        text-align center
        padding-top 15px