.m_header
  background #fff
  height 100px
  border-bottom 1px solid #dcdcdc
  position relative
  z-index 20
  @media SM
    height 130px
  .wrapper
    display table
    width 100%
    .vertical
      display table-cell
      vertical-align middle
  .logo
    float left
    margin-top 10px
    @media SM
      margin-top 0
    @media MD
      margin-top 15px
    a
      display block
    img
      &.desktop
        display none
        @media XS
          display block
          max-width 250px
        @media SM
          max-width 326px
      &.mobile
        @media XS
          display none
  .info
    float right
  .menu
    display none
    position absolute
    left 0
    right 0
    text-align right
    padding-right 15px
    @media SM
      display block
    ul
      li
        display inline-block
        vertical-align middle
        margin-left 10px
        @media MD
          margin-left 20px
        a
          font-semilight()
          color #666666
          font-size 14px
          @media MD
            font-size 16px
          &:hover
            color $blue
            text-decoration underline
  .contacts
    text-align right
    @media SM
      margin-top 45px
    @media MD
      margin-top 55px
    .tel
      font-medium()
      @media SM
        display inline-block
        vertical-align middle
        margin-right 10px
      @media LG
        margin-right 125px
      a
        color #000
        font-size 24px
        line-height 1
        @media MD
          font-size 36px
        span
          color $blue
    .callback
      margin-top 5px
      @media SM
        margin-top 0
        display inline-block
        vertical-align middle