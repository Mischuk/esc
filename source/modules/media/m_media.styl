.m_media
  background #eff6f9
  @media SM
    text-align center
  .item
    font-size 17px
    @media SM
      display inline-block
      vertical-align top
      width 49%
      text-align left
      margin-bottom 30px
    & + .item
      margin-top 30px
      @media SM
        margin-top 0
    &:nth-child(7),
    &:nth-child(8),
    &:nth-child(9),
    &:nth-child(10),
    &:nth-child(11),
    &:nth-child(12)
      display none
      @media SM
        display inline-block
    .post-date
      color #323232
      font-size 15px
      line-height 1
      margin-bottom 4px
    .post-title
      &:hover
        text-decoration underline
  .all
    padding 30px 0
    @media SM
      padding-bottom 70px
