.m_steps
  .columns
    clearfix()
    text-align center
  .column
    position relative
    display inline-block
    vertical-align top
    width 49%
    text-align center
    margin-bottom 10px
    @media XS
      width 32%
    @media SM
      width 19%
      margin-bottom 20px
    @media MD
      margin-bottom 30px
    &:after
      @media MD
        content ''
        background: url('../images/sprite.png') no-repeat -150px 0;
        width: 22px;
        height: 51px;
        right -15px
        top 25px
        position absolute
      @media LG
        top 45px
    &:last-child:after
      display none
  .icon
    width 100px
    height 100px
    line-height 100px
    background #fec107
    border-radius 50%
    margin 0 auto
    @media LG
      width 140px
      height 140px
      line-height 140px
    img
      display inline-block
      vertical-align middle
      max-width 50%
      max-height 50%
      @media LG
        max-width 100%
        max-height 100%
    @keyframes zooming
      0%
        transform scale(1)
      25%
        transform scale(1.1)
      50%
        transform scale(1)
      75%
        transform scale(0.9)
      100%
        transform scale(1)
    &:hover
      img
        animation zooming .75s linear infinite
  .title
    font-size 16px
    padding 10px 10px
    color #333
    @media LG
      font-size 20px
      padding 30px 5px
