    a(id="popup-success-trigger" class="popup-with-zoom-anim" href="#modal-success")
    #modal-success.popup.zoom-anim-dialog.mfp-hide
      .header
        h2 Спасибо за обращение!
      .body
        p Наш менеджер свяжется с Вами в ближайшее время
      .footer
        <script src="//yastatic.net/es5-shims/0.0.2/es5-shims.min.js"></script>
        <script src="//yastatic.net/share2/share.js"></script>
        .label Мы в соц. сетях
        .socials
          <div class="ya-share2" data-services="vkontakte,facebook,odnoklassniki,moimir,twitter"></div>
    a(id="popup-total-trigger" class="popup-with-zoom-anim" href="#modal-total")
    #modal-total.popup.zoom-anim-dialog.mfp-hide
      .header
        h2 Отправьте запрос, чтобы узнать итоговую стоимость
        p Мы свяжемся с вами в удобное для вас время
      .body
        form
          .form-header
            .info
              .icon
              ul
                li
                  span.label ОСАГО:
                  span.value 10 000 руб
                li
                  span.label Карта:
                  span.value 1 000 руб
                li
                  span.label Доставка:
                  span.value 0 руб
                li
                  span.label ОСАГО:
                  span.value 11 000 руб
            .additional
              .title Дополнительно
              ul
                li
                  .checked
                    label
                      input(type="checkbox" name="additional")
                      span.cc-icon
                      span.cc-label Заказать диагностическую карту
                li
                  .checked
                    label
                      input(type="checkbox" name="additional")
                      span.cc-icon
                      span.cc-label КАСКО
                li
                  .checked
                    label
                      input(type="checkbox" name="additional")
                      span.cc-icon
                      span.cc-label ОСАГО
                li
                  .checked
                    label
                      input(type="checkbox" name="additional")
                      span.cc-icon
                      span.cc-label Договор
                li
                  .checked
                    label
                      input(type="checkbox" name="additional")
                      span.cc-icon
                      span.cc-label Зеленая карта
                li
                  .checked
                    label
                      input(type="checkbox" name="additional")
                      span.cc-icon
                      span.cc-label Проверка постановки на учет
          .form-row
            .label Как Вас зовут?
            .input
              input(class="form-input" type="text" placeholder="ФИО")
          .form-row
            .label Ваш телефон
            .input
              input(class="form-input mask-tel" type="tel" placeholder="+7 (___) ___-__-__" required)
          .form-row
            .label Ваш email
            .input
              input(class="form-input" type="email" placeholder="")
          .form-row
            .input
              button(class="button-main" type="submit") Отправить заявку
