clearfix()
  &:before
  &:after
    content ''
    display table
    clear both

anim()
  transition all 0.3s cubic-bezier(.33,.66,.66,1)

trs(animation)
  transition animation 0.3s cubic-bezier(.33,.66,.66,1)

retina()
  @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
    background-image url('../images/sprite@2x.png')
    background-size $sprite
bg(a, b)
  background url(a) no-repeat 0 0
  @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
    background-image url(b)
    background-size @width

size(wh)
  width wh
  height wh

sn()
  -webkit-touch-callout none
  -khtml-user-select none
  user-select none


font-light()
  font-family 'SegoeUI-Light'
  font-style normal
  font-weight normal

font-semilight()
  font-family 'SegoeUI-Semilight'
  font-style normal
  font-weight normal

font-regular()
  font-family 'PFDinDisplay-Regular'
  font-style normal
  font-weight normal

font-medium()
  font-family 'PFDinDisplay-Medium'
  font-style normal
  font-weight normal