.popup
  position relative
  background #fff
  max-width 540px
  margin 40px auto
  .header
    padding 20px
    background #fff
    @media screen and (min-width: 568px)
      padding 25px 70px
    h2
      font-medium()
      color #000000
    p
      margin-bottom 0
      color #666666
  .body
    background $blue
    padding 20px
    @media screen and (min-width: 568px)
      padding 45px 70px
    .form-row
      & + .form-row
        margin-top 15px
    .label
      font-size 16px
      color #fff
      padding-bottom 5px
    .input
      button[type=submit]
        border none
        width 100%
        height 50px
        line-height 50px
        font-size 20px
      input.form-input
        height 50px
        line-height 50px
        border none
        border-radius 4px
        width 100%
        padding 0 15px
        font-semilight()
      .select2-container
        width 100% !important
        .select2-selection--single
          height 50px
          border none
          .select2-selection__rendered
            line-height 50px
            color #333
            padding-left 15px
            padding-right 40px
          .select2-selection__arrow
            height 50px
            top 0
            right 0
            width 40px
            b
              border none
              background: url('../images/sprite.png') no-repeat 0 0;
              width: 11px;
              height: 6px;
              margin-top -3px
    .radios
      display block
      margin-bottom 10px
      .radio-custom
        display inline-block
        vertical-align middle
        margin-right 10px
      label
        display inline-block
        vertical-align middle
        cursor pointer
        input
          display none
        .rc-icon
          display inline-block
          vertical-align middle
          width 20px
          height 20px
          border-radius 50%
          background #fff
        .rc-label
          display inline-block
          vertical-align middle
          line-height 20px
          color #fff
          font-size 16px
        input:checked + .rc-icon
          box-shadow inset 0 0 0 4px #fff
          background #fec107
    .checked
      display block
      label
        display inline-block
        vertical-align middle
        cursor pointer
        input
          display none
        .cc-icon
          display inline-block
          vertical-align middle
          width 20px
          height 20px
          border-radius 4px
          background #fff
        .cc-label
          display inline-block
          vertical-align middle
          line-height 20px
          color #fff
          font-size 16px
        input:checked + .cc-icon
          box-shadow inset 0 0 0 4px #fff
          background #fec107
    .form-header
      .info
        position relative
        margin-bottom 20px
        padding-left 200px
        @media XS
          margin-bottom 40px
        .icon
          display none
          @media XS
            display block
            position absolute
            left 0
            top 50%
            width 135px
            height 135px
            background #fec107
            border-radius 50%
            margin-top -67px
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat 0 -100px;
              width: 70px;
              height: 65px;
              position absolute
              left 50%
              top 50%
              margin-left -35px
              margin-top -32.5px
        ul
          font-size 20px
          li
            margin 10px 0
          .label,
          .value
            font-size 20px
          .value
            color #fff
            font-regular()
      .additional
        border-bottom 1px solid #54a4ce
        padding-bottom 20px
        margin-bottom 20px
        .title
          font-medium()
          color #fff
          font-size 16px
          margin-bottom 5px
        li
          margin-bottom 10px

#modal-success
  .body
    border-bottom 1px solid #54a4ce
    p
      font-light()
      margin-bottom 0
      color #fff
      font-size 30px
  .footer
    background $blue
    color #fff
    padding 20px
    @media screen and (min-width: 568px)
      padding 25px 70px
    .label, .socials
      display inline-block
      vertical-align middle
    .label
      margin-right 10px
#modal-video
  max-width 960px
  .modal-tabs-nav
    .item
      display inline-block
      vertical-align middle
      margin 10px
      margin-left 0
      a
        display inline-block
        vertical-align middle
        padding 10px 25px
        border 1px solid $blue
        border-radius 4px
        font-size 16px
        &:hover,
        &.current
          background $blue
          color #fff
  .modal-tabs-content
    .item
      display none
      position: relative;
      padding-bottom: 56.25%; /* 16:9 */
      padding-top: 25px;
      height: 0;
      &.current
        display block
      iframe
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;